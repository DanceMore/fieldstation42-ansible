# Toggle shaders off with 'h' key
h no-osd cycle-values glsl-shaders ""

# use c to rotate effects...
c no-osd cycle-values glsl-shaders ""{% for shader in shader_files.files | map(attribute='path') | map('basename') | sort %} "~/.config/mpv/shaders/{{ shader }}"{% endfor %}

# use z to rotate effects backwards...
z no-osd cycle-values glsl-shaders ""{% for shader in shader_files.files | map(attribute='path') | map('basename') | sort | reverse %} "~/.config/mpv/shaders/{{ shader }}"{% endfor %}

# use b for digital effect on/off
b no-osd cycle-values glsl-shaders "" "~/.config/mpv/shaders/8bit.glsl"
